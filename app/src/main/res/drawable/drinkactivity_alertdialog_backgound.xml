<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <!-- make a gradient background-->
            <gradient
                android:type="linear"
                android:startColor="@color/DrinkActivityDialogBackground"
                android:endColor="@color/DrinkActivityDialogBackground"
                android:centerColor="@color/DrinkActivityDialogBackground"
                android:angle="90"
                android:gradientRadius="90"/>

            <!-- apply a border around button-->
            <stroke android:color="@color/DrinkActivityDialogBackground"
                android:width="2dp" />
            <!-- make the button corners rounded -->
        </shape>
    </item>

</selector>