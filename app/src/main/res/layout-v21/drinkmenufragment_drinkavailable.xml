<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:background="@color/BackgroundOne"
    android:elevation="20dp">

    <ListView
        android:divider="@color/AvailableFoodDividerColor"
        android:dividerHeight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/listView"
        android:padding="10dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/da_availablefood_background"
        android:scrollbarThumbVertical="@drawable/da_scrollbar_vertical_thumb"
        android:scrollbarFadeDuration="1000"
        android:smoothScrollbar="true" />

</RelativeLayout>